<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE0"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingTop="15sp"
        android:text="@string/AutuationText"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerAutuacao"
        style="@style/spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFE0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:text="@string/boardText"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/boardTextCadastre"
            android:layout_width="240dp"
            android:layout_height="35sp"
            android:layout_marginLeft="10sp"
            android:ems="10"
            android:inputType="none" >
        </EditText>
        
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="188dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFE0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFE0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:text="@string/stateText"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="@string/cityText"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFE0"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/stateSpinner"
                    style="@style/spinnerStyle"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/cityTextCadastre"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:ems="10"
                    android:inputType="text" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFE0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:paddingLeft="10sp"
                    android:text="@string/companyText"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/vehicleModel"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFE0"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/companySpinner"
                    style="@style/spinnerStyle"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/modelText"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:ems="10"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFE0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="10sp"
                    android:text="@string/yearText"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="10sp"
                    android:text="@string/colorText"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFE0"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/yearSpinner"
                    style="@style/spinnerStyle"
                    android:paddingLeft="10sp" />

                <EditText
                    android:id="@+id/colorTextCadastre"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:ems="10"
                    android:inputType="text" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFE0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/propertyText"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/textNameCadastre"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
                
            </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFE0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cadastreButton"
            android:layout_width="140dp"
            android:layout_height="40sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/cadastreButton"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/backToMenuButtonCadastre"
            android:layout_width="150dp"
            android:layout_height="40sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="onBackToMenuButtonCadastreClick"
            android:text="@string/buttonBack"
            android:textSize="17sp"
            android:textStyle="bold" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFE0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/goToInquiryButton"
            android:layout_width="300dp"
            android:layout_height="40sp"
            android:layout_marginLeft="10dp"
            android:onClick="goToInquiryClick"
            android:text="@string/toInquiryText"
            android:textSize="17sp"
            android:textStyle="bold" />
        
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFE0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView12"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
        
</LinearLayout>
