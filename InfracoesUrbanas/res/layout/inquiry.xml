<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE0"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFE0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:text="@string/boardText"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/boardTextInquiry"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:ems="10"
            android:inputType="none" >
        </EditText>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFE0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/consultButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="@string/consultButton"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/captureButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="10sp"
            android:onClick="onCaptureButtonInquiryClick"
            android:text="@string/captureText"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFE0"
        android:orientation="vertical" >

        <Button
            android:id="@+id/goToCadastreButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10sp"
            android:onClick="goToCadastreClick"
            android:text="@string/toCadastreText"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/backToMenuButtonInquiry"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10sp"
            android:onClick="onBackToMenuButtonInquiryClick"
            android:text="@string/buttonBack"
            android:textSize="15sp"
            android:textStyle="bold" />
        
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFE0"
                android:orientation="vertical" >
		        
                <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="#FFFFE0"
			        android:orientation="vertical" >
			        
	                <TextView
				        android:id="@+id/TextView02"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10sp"
				        android:layout_marginLeft="10sp"
				        android:text="@string/AutuationText"
				        android:textSize="17sp"
				        android:textStyle="bold" />
	
	                <EditText
	                    android:id="@+id/autuationTextInquiry"
	                    android:layout_width="300dp"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="10sp"
	                    android:ems="10"
	                    android:inputType="textMultiLine" >
	                </EditText>
	                
				</LinearLayout>
				
                <LinearLayout
		        	android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="#FFFFE0"
			        android:orientation="horizontal" >
	                
                    <TextView
				        android:id="@+id/TextView03"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10sp"
				        android:layout_marginTop="10sp"
				        android:text="@string/stateText"
				        android:textSize="17sp"
				        android:textStyle="bold" />
                    
                    <TextView
	                    android:id="@+id/TextView04"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="55sp"
				        android:layout_marginTop="10sp"
	                    android:text="@string/cityText"
	                    android:textSize="17sp"
	                    android:textStyle="bold" />
                    
				</LinearLayout>
				
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFE0"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/stateTextInquiry"
                        android:layout_width="90dp"
                        android:layout_height="40sp"
                        android:layout_marginLeft="10sp"
                        android:ems="10"
                        android:inputType="none" />

                    <EditText
                        android:id="@+id/cityTextInquiry"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2sp"
                        android:ems="10"
                        android:inputType="text" >
                    </EditText>
                    
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFE0"
                    android:orientation="horizontal" >
                    
                    <TextView
				        android:id="@+id/textView05"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10sp"
				        android:layout_marginTop="10sp"
				        android:text="@string/companyText"
				        android:textSize="17sp"
				        android:textStyle="bold" />
                    
                    <TextView
				        android:id="@+id/textView06"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10sp"
				        android:layout_marginLeft="80sp"
				        android:text="@string/vehicleModel"
				        android:textSize="17sp"
				        android:textStyle="bold" />
                    
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFE0"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/companyTextInquiry"
                        android:layout_width="130dp"
                        android:layout_height="40sp"
                        android:layout_marginLeft="10sp"
                        android:ems="10"
                        android:inputType="text" />
                    
                    <EditText
				        android:id="@+id/modelTextInquiry"
				        android:layout_width="170dp"
				        android:layout_height="40sp"
				        android:ems="10"
				        android:inputType="none" />
                    
				</LinearLayout>
				
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFE0"
                    android:orientation="horizontal" >
                    
                    <TextView
				        android:id="@+id/textView07"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10sp"
				        android:layout_marginTop="10sp"
				        android:text="@string/yearText"
				        android:textSize="17sp"
				        android:textStyle="bold" />
                    
                    <TextView
	                    android:id="@+id/textView08"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="85dp"
	                    android:layout_marginTop="10sp"
	                    android:text="@string/colorText"
	                    android:textSize="17sp"
	                    android:textStyle="bold" />
                    
				</LinearLayout>
				
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFE0"
                    android:orientation="horizontal" >
                    
                    <EditText
                        android:id="@+id/yearTextInquiry"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:ems="10"
                        android:inputType="number" />
                    
                    <EditText
	                    android:id="@+id/colorTextInquiry"
	                    android:layout_width="180dp"
	                    android:layout_height="wrap_content"
	                    android:ems="10"
	                    android:inputType="text" />
                    
				</LinearLayout>
				
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFE0"
                    android:orientation="vertical" >
                    
                    <TextView
				        android:id="@+id/textView09"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:layout_marginLeft="10sp"
						android:layout_marginTop="10sp"
				        android:text="@string/propertyText"
				        android:textSize="17sp"
				        android:textStyle="bold" />
                    
                    <EditText
				        android:id="@+id/textNameInquiry"
				        android:layout_width="300dp"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10sp"
				        android:ems="10"
				        android:inputType="textPersonName" />
                    
				</LinearLayout>
				
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFE0"
                    android:orientation="horizontal" >
                    
                    <TextView
				        android:id="@+id/textView10"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10sp"
				        android:layout_marginTop="10sp"
				        android:text="@string/dateText"
				        android:textSize="17sp"
				        android:textStyle="bold" />
                    
                    <TextView
				        android:id="@+id/textView11"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10sp"
				        android:layout_marginLeft="23dp"
				        android:text="@string/hourText"
				        android:textSize="17sp"
				        android:textStyle="bold" />
                    
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFE0"
                    android:orientation="horizontal" >
                    
                    <EditText
				        android:id="@+id/textDateInquiry"
				        android:layout_width="130dp"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10sp"
				        android:ems="10"
				        android:textSize="18sp"
				        android:inputType="date" />
                    
                    <EditText
				        android:id="@+id/textHourInquiry"
				        android:layout_width="155dp"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="23dp"
				        android:ems="10"
				        android:textSize="18sp"
				        android:inputType="time" />
                    
				</LinearLayout>                    				
                    
			</LinearLayout>
        
        </ScrollView>
        
</LinearLayout>
